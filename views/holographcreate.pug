extends layout
 
block content
  h1= title
  form(id='holographForm', action="/resource/holographCreate", method="POST")
    div.form-group
      label.holographAttr(for='holograph_name') holograph name
      input#Robot_type(type='text', name='holograph_name')
    div.form-group
      label.holographsAttr(for='creator') holograph creator
      input#sprice(type='number', name='creator')
    div.form-group
      label.holographsAttr(for='edition_number') holograph edition number
      input#cost(type='text', name='edition_number')
    input(type="submit")
 
  script.
    document.forms['holographForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Save succeeded");
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Save failed " + error );
      });
    });