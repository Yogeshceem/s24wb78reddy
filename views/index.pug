extends layout

block content
  h1= title
  p Welcome to #{title}
  p Hello, I'm Yogesh
  button(type="button", class="btn btn-secondary", onclick="double()") 
  div#double Up the amount

  script.
    var value = 0;
    var power = 1;

    function double() {
      value += 1;
      power *= 2;
      document.getElementById('double').innerText = `Two to the power ${value} is ${power}.`;
    }
